package com.ilpexperion.GroupAssignment;
import java.util.Scanner;
public class SumofSeries4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanner = new Scanner(System.in);
		int number;
		double sum=0;
		double product=1;
		double temp;
		System.out.println("Enter the value of n");
		number=scanner.nextInt();
		
		for(int integer=1;integer<=number;integer++)
		{
			temp=1;
			//temp=integer*integer;
			product=1;
			for(double integer1=1;integer1<=temp;integer1++)
				{
				product=product*integer1;
				}
			temp=(double)integer/(double)product;
			System.out.println("fact:= "+product);
			sum=sum+temp;
			//System.out.println("Sum= "+sum);
		}
		System.out.println("Sum= "+sum);

	}

}
