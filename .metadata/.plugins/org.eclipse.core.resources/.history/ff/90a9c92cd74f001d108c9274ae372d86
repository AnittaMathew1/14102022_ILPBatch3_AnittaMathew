package com.ilpexperion.GroupAssignment;

import java.util.Scanner;

public class SumofSeries5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanner = new Scanner(System.in);
		double number;
		double sum=0;
		double product=1.0;
		double temp;
		System.out.println("Enter the value of n");
		number=scanner.nextInt();
		//sum=(double)number/(double)temp;
		
		for(int integer=1;integer<=number;integer++)
		{
			temp=1;
			temp=integer*integer;
			product=1;
			for(int integer1=1;integer1<=temp;integer1++)
				{
				product=product*integer1;
				}
			temp=(double)integer/(double)product;
			//System.out.println("Temp= "+temp);
			sum=sum+temp;
			//System.out.println("Sum= "+sum);
		}
		System.out.println("Sum= "+sum);

	}

}
